<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MQTT">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardBackgroundColor="@color/orange_100"
        android:id="@+id/location_slection"
        app:cardCornerRadius="50dp"
        app:cardElevation="8dp"
        >
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="7"
        android:padding="30dp"
        >
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textSize="25sp"
                android:text="MQTT帳號"/>
            <EditText
                android:id="@+id/editTextTextPerson_MQTTacc"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:text="109thmos" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            >
            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textSize="25sp"
                android:text="MQTT密碼" />
            <EditText
                android:id="@+id/editTextTextPerson_MQTTpass"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:text="0147" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView4"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textSize="25sp"
                android:text="手機號碼" />
            <EditText
                android:id="@+id/editTextTextPersonPhoneNumber"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="number"
                android:text="0912345678"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textSize="25sp"
                android:text="使用者名稱" />
            <EditText
                android:id="@+id/editTextTextPersonUserName"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:text="ben" />
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_row="4"
            android:layout_column="0"
            >
            <TextView
                android:id="@+id/textView2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:textSize="25sp"
                android:text="家的名稱"/>
            <EditText
                android:id="@+id/editTextTextPersonhomeName"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:ems="10"
                android:textAlignment="center"
                android:inputType="textPersonName"
                android:text="民雄家" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/md_theme_light_onSecondary"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_gravity="center"
                >

                <TextView
                    android:id="@+id/show_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="20dp"
                    android:hint="儲存是否成功?"
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <ImageButton
                    android:id="@+id/button1_save"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_below="@+id/show_state"
                    android:layout_centerInParent="true"
                    android:layout_margin="15dp"
                    android:background="@drawable/store_btn"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_save_24" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>